{
    "extends": "./.svelte-kit/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "bundler",
        "rootDirs": [
            ".",
            "./.svelte-kit/types",
            "./$houdini/types"
        ],
        "types": [
            "vitest/globals"
        ],
    },
    "include": [
        "src/**/*",
        "e2e/**/*.ts",
        ".svelte-kit/ambient.d.ts",
    ]
}
